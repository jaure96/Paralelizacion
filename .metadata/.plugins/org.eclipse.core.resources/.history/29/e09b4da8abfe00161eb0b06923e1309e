package lock;

import java.util.concurrent.locks.Lock;
import java.util.concurrent.locks.ReentrantLock;

public class Cuenta {
	
	long valor;
	Lock lock;
	
	public Cuenta() {
		valor = 0;
		lock = new ReentrantLock();
	}

	public long getValor() {
		return valor;
	}

	public void setValor(long valor) {
		lock.lock();
		this.valor = valor;
		lock.unlock();
	}
	
	

}
